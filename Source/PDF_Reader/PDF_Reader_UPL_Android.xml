<?xml version="1.0" encoding="utf-8"?>

<root xmlns:android="http://schemas.android.com/apk/res/android">    
    <androidManifestUpdates>
        <addPermission android:name="android.permission.READ_EXTERNAL_STORAGE" />
        <addPermission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    </androidManifestUpdates>
    
    <resourceCopies>
        <copyFile src="$S(PluginDir)/ThirdParty/pdfium/Android/lib/libpdfium.so" 
                  dst="$S(BuildDir)/lib/libpdfium.so" />
    </resourceCopies>
    
    <soLoadLibrary>        
        <loadLibrary name="libpdfium"                     
                     failmsg="libpdfium library not loaded and may be required for PDF_Reader." />
    </soLoadLibrary>
</root>